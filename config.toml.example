# TUME Email Client Configuration
# Place this file at: ~/.config/tume/config.toml

# ==============================================================================
# ACCOUNTS CONFIGURATION
# ==============================================================================
# Define your email accounts here. Each account should have a unique key
# (e.g., "work", "personal", "side-project").

[accounts.work]
name = "Work Gmail"
email = "work@company.com"
provider = "gmail"
default = true              # Set one account as default
color = "blue"              # Optional: color for visual indicators
display_order = 1           # Lower numbers appear first

[accounts.personal]
name = "Personal"
email = "me@gmail.com"
provider = "gmail"
color = "green"
display_order = 2

[accounts.side]
name = "Side Project"
email = "side@project.io"
provider = "imap"
color = "yellow"
display_order = 3

